<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medbuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.medbuddy.Loginpage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.medbuddy.P_childControlPanel"
            android:label="@string/title_activity_p_child_control_panel" >
        </activity>
        <activity
            android:name="com.example.medbuddy.P_quicklog"
            android:label="@string/title_activity_p_quicklog"
            android:parentActivityName="com.example.medbuddy.P_childControlPanel" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.medbuddy.P_childControlPanel" />
        </activity>
        <activity
            android:name="com.example.medbuddy.P_Medication"
            android:label="@string/title_activity_p__medication"
            android:parentActivityName="com.example.medbuddy.P_childControlPanel" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.medbuddy.P_childControlPanel" />
        </activity>
    </application>

</manifest>